<ul class="meta clearfix">
	<li class="alpha">Enviada há <%= time_ago_in_words(question.created_at) %> atrás por <%= author_name(question.user_id) %>.</li>
	<li class="view"><%= meta_in_words(question.visualizations.count, {
												:singular => 'visualização', 
												:plural => 'visualizações'}) %></li>
	<li class="res"><%= link_to meta_in_words(question.answers.count, {
												:singular => 'resposta', 
												:plural => 'respostas'}), question %></li>
	<li class="omega fav"><%= meta_in_words(question.favorites.count, {
												:singular => 'favorito', 
												:plural => 'favoritos'}) %></li>
</ul>
