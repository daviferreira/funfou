<div class="question">
	<h2><%= @question.title %></h2>

	<%= render 'info_data', :question => @question %>

	<%= render 'favorite_form' if signed_in? %>

	<div class="description">
		<%= @question.content %>
	</div>
	
	<% if signed_in? %>
	  <%= render 'form_answer'%>
	<% else %>
	  <%= render 'sessions/form' %>
	<% end %>
</div>

