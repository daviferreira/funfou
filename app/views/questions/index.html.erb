<div class="breadcrumb-container">
	<ul class="breadcrumb clearfix">
		<li><%= link_to "home", root_path, :title => "Página inicial" %></li>
		<li class="separator">/</li>
	<li <%if params[:order].nil? and params[:keywords].nil? %>class="active"<% end %>><%= link_to "perguntas", perguntas_path, :title => "Perguntas" %></li>
		<% if not params[:order].nil? %>
		<li class="separator">/</li>
		<li class="active"><%= params[:order].sub("_", " ") %></li>
		<% elsif not params[:keywords].nil? %>
		<li class="separator">/</li>
		<li class="active">busca por <%= params[:keywords].downcase %></li>
		<% end %>
	</ul>
</div>




<% if @questions.empty? %>
	<div class="error" style="margin:24px 0 24px 0;">Não foi encontrara nenhuma pergunta com o termo <em><%= params[:keywords] %></em>. <strong><%= link_to "Que tal perguntar?", new_question_path %></strong></div>
<% else %>
	<%= render 'filters' %>
	<% @questions.each do |question| %>
  	<div class="user-questions">
  		<%= render question %>
  	</div>
	<% end %>
	<div class="apple_pagination">
		<%= will_paginate @questions, :next_label => "próximo &raquo;", :previous_label => "&laquo; anterior" %>
	</div>
<% end %>
