<div class="question">
  <h3><%= link_to question.title, question %></h3>

  <ul class="meta clearfix">
      <li class="alpha">Enviada há <%= time_ago_in_words(question.created_at) %> atrás.</li>
      <li class="view"><%= question.total_views %> visualizações</li>
      <li class="res"><%= question.total_answers %> respostas</li>
      <li class="omega fav"><%= question.total_favs %> favoritos</li>
  </ul>
</div>