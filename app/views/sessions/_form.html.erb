<%= form_for(:session, :url => sessions_path) do |f| %>

  <% if @question %>
    <%= f.hidden_field :question_id , { :value => @question.id } %>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>