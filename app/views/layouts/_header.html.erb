<% if signed_in? %>
<div id="account-info" class="clearfix">
  <div id="user-greetings">
    <%= link_to gravatar_for current_user, :size => 30 %> 
    <span id="greetings-time"><%= link_to first_name(current_user.name), usuario_path(current_user) %></span>
  </div>

  <ul id="user-options" class="clearfix">
    <li class="perguntar"><%= link_to "Perguntar!", new_question_path %></li>
  	<li><%= link_to "Favoritos", favoritos_path %></li>
    <li><%= link_to "Meus dados", meus_dados_path(current_user) %></li>
    <li><%= link_to "Sair", logout_path, :method => :delete %></li>
  </ul>
</div>
<% else %>
  <div class="info">
      <p><span id="greetings-time-guest"></span> <%= link_to "Crie uma conta", new_user_path %> (leva menos de 10 segundos!) para ter acesso a todos os recursos do <strong>Funfou</strong> ou <%= link_to "efetue login", login_path %>.</p>
  </div>
  <% end %>

<header>
    <div id="search">
        <form id="frm-search" action="<%= search_path %>" method="GET">
            <input type="text" id="fld-search" name="keywords" value="Pesquisar..." />
            <input type="submit" value="OK" id="btn-search" />
        </form>
    </div>
    <div id="logo" class="clearfix"><%= link_to logo, root_path %><span>De programador para programador.</span></div>
</header>
