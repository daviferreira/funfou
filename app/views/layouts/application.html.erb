		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag "jquery-ui-1.8.11.custom.min" %>
		<%= javascript_include_tag "custom" %>
		<%= javascript_include_tag "jquery.snippet.min" %>
		<%= javascript_include_tag "jquery.tweet" %>
