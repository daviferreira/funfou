<h2>Usu√°rios</h2>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <% if user.avatar.exists? then %>
      	<%= image_tag user.avatar.url(:thumb) %>
      <% end %>
			<%= link_to user.name, usuario_path(user) %>
			<% if current_user.admin? and user.email != "contato@daviferreira.com" %>
			 | <%= link_to "Excluir", user, :method => :delete,
																 :confirm => "Tem certeza?",
																 :title => "Delete #{user.name}" %>
			 | <%= link_to "Admin #{user.admin}", toggle_admin_path(user) %>
			 | <%= link_to "Ativo #{user.active}", toggle_active_path(user) %>
			 | <%= link_to "Editar", edit_user_path(user) %>
			<% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
