<h2 class="alt">Redefinir senha</h2>
<div class="box-form">
  <p class="info" style="margin:0 0 12px 0;">Digite e confirme sua nova senha no formul√°rio abaixo:</p>

  <%= form_for(@user, :url => save_password_path) do |f| %>
  	<%= render 'shared/error_messages', :object => f.object %>
  	<%= f.hidden_field :salt %>
    <div class="field">
      <%= f.label :password, "Digite uma nova senha" %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirme sua nova senha" %><br />
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit "Save new password" %>
    </div>

  <% end %>
</div>