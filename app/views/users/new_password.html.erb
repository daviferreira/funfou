<h2>Nova senha</h2>
<%= form_for(@user, :as => :instructions, :url => instrucoes_path(@user)) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
   <%= f.label :email %><br />
   <%= f.text_field :email %>
 </div>
 <div class="actions">
   <%= f.submit "Solicitar instruções" %>
 </div>
<% end %>
