<li class="clearfix">
  <%= render 'answers/votes', :answer => answer %>
  <div class="answer"><%= answer.content %></div>
	<div class="info-data">Enviada <%= time_ago_in_words(answer.created_at) %> atr√°s por <%= author_name(answer.user_id) %></div>
	<% if signed_in? and current_user.admin? %>
		<%= link_to "Editar", editar_resposta_path(answer) %>
		| <%= link_to "Excluir", answer, :method => :delete,
														 :confirm => "Tem certeza?",
												 		 :title => "Delete #{answer.content}" %>
		| <%= link_to_publish(answer) %>
	<% end %>
</li>
