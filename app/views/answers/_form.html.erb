<div id="box-form-answer" class="box-form">
  <%= form_for @answer do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <%= f.hidden_field :question_id, {:value => @question.id} %>
    <a name="form_answer"></a>
    <div class="field">
      <%= f.label :content, "Sua resposta" %>
      <%= render "shared/form_instructions" %>
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit "Enviar" %>
    </div>
  <% end %>
</div>
