<%= form_for @answer do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<%= f.hidden_field :question_id, {:value => @question.id} %>
	<div class="field">
		<%= f.label :content %>
		<%= f.text_area :content %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
<% end %>
